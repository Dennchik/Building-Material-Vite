//-! Mixin Head-Links
mixin style(href)
  link(rel="stylesheet" type="text/css" href=href)
mixin icons(href)
  link(rel="icon" type="image/x-icon" href=href)
mixin script(src)
  script(defer="defer" type="text/javascript" src=src)

//-! Mixin link & attributes --------------------------
mixin link(id, href, name)
  a(class=id, href=href)&attributes(attributes)
    span=name
    block
//-! Mixin link ---------------------------------------
mixin btn-link(type, text, mod)
  - m = mod || ''
  a(class=mod + '' type=type)=text
  block

//-! mixins SVG.pug
