  else
    img(src=imgSrc alt=alt class=className loading=loading)





//-! mixins/picture.pug
mixin picture(src, alt, className = '', loading = 'lazy', width = false, height = false)
  - var cleanSrc = src.replace(/^\.?\//, '')
  - var basePath = getWebRoot(filename)
  - var webpSrc = basePath + cleanSrc.replace(/\.[^\.]+$/, '.webp')
  - var imgSrc = basePath + cleanSrc

  picture
    source(srcset=webpSrc type='image/webp')
    if width && height
      img(src=imgSrc alt=alt class=className loading=loading width=width height=height)
    else
      img(src=imgSrc alt=alt class=className loading=loading)

//-! Mixin iconFont
mixin iconfont(mod, classes)
  i(class='icon-' + mod + ' ' + classes)
    block

//-! Mixin list «rest arguments».
mixin list-item(list, link, alink, name)
  li(class=list)
    a(class=link href=`${alink}`)=name
//-! Sprite SVG --------------------------------------
mixin svg(name, bem, mod)
  - m = mod || ''
  svg(class= name + ' '+ bem + ' '+ mod + ' ')
    use(href=`img/sprites/sprite.svg#${name}`)

//- initialization
- var blocks = {}

mixin set(key)
  - blocks[key] = this.block

//- mixin definition ---------------------------------
mixin layout
  block
  .page__main-content
    if blocks.mainContent
      - blocks.mainContent ()
    else
      //- Do nothing

  .side
    if blocks.side
      - blocks.side()
    else
      //- Do nothing
  +set('main')
  +set('side')
